<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="736dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/beach_background4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="320dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/booking"
                android:textAlignment="center"
                android:textColor="#F5F8FB"
                android:textSize="36sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="352dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:text="@string/booking_details"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:ems="10"
            android:hint="@string/customer_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:ems="10"
            android:hint="@string/contact_no"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:ems="10"
            android:hint="@string/budget"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="@string/number_of_people"
            android:inputType="textPersonName" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:text="@string/ac" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="240dp"
            android:layout_marginTop="-45dp"
            android:layout_marginBottom="10dp"
            android:text="@string/non_ac" />

        <EditText
            android:id="@+id/editDate1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:ems="10"
            android:hint="@string/check_in"
            android:inputType="date" />

        <EditText
            android:id="@+id/editDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="240dp"
            android:layout_marginTop="-45dp"
            android:ems="10"
            android:hint="@string/check_out"
            android:inputType="date" />

        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="50dp"
            android:background="@drawable/button_background"
            android:text="@string/show_details"

            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>