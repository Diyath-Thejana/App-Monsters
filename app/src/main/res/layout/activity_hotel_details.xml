<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/beach_background3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/Hotels"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="320dp"
                android:layout_marginTop="-70dp"
                app:srcCompat="@drawable/logo" />

            <SearchView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/design_default_color_background" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="250dp"
                    android:layout_height="138dp"
                    app:srcCompat="@drawable/hotel1" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="260dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/booknow_button"
                    android:text="@string/Book_now"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="250dp"
                    android:layout_height="138dp"
                    app:srcCompat="@drawable/hotel3" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="260dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/booknow_button"
                    android:text="@string/Book_now"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="One of our top picks in Ratnapura. Offering garden views, Volunteer Ceylon in Ratnapura offers accommodation, a shared lounge, a garden and a terrace. The homestay features both WiFi and private parking free of charge"
                    tools:text="@string/description" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="250dp"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/hotel7" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="260dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/booknow_button"
                    android:text="@string/Book_now"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="250dp"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/hotel8" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="260dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/booknow_button"

                    android:text="@string/Book_now"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>